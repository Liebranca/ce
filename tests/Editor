#!/usr/bin/perl
#
# finally!
#
# ---   *   ---   *   ---

# deps
package main;
  use v5.36.0;
  use strict;
  use warnings;

  use lib $ENV{'ARPATH'}.'/ce/';

  use Rect;

  use lib $ENV{'ARPATH'}.'/lib/sys/';
  use lib $ENV{'ARPATH'}.'/lib/';

  use Style;
  use Arstd::IO;

  use Lycon;

  use Lycon::Clk;
  use Lycon::Ctl;
  use Lycon::Dpy;
  use Lycon::Kbd;
  use Lycon::Loop;

  binmode(STDOUT,':utf8');

# ---   *   ---   *   ---

my $Cache={

  terminate=>0,

};

my $Screen='';
my $Cursor=[0,0];

my $Scroll_Y=0;

my $Y_Offset=0;

my @ttysz=(0,0);
Lycon::ttysz(\@ttysz);

my $Canvas=Rect->nit(($ttysz[0]-2)."x$ttysz[0]");
my $File=orc('./avto');
my @File_Lines=split $NEWLINE_RE,$File;

sub on_scroll() {

  $Y_Offset+=$Scroll_Y;
  $Y_Offset*=0+(($Y_Offset>=0));

  my @slice=@File_Lines[
    $Y_Offset..$ttysz[0]-2

  ];

  my $slice=join "\n",@slice;

  $Screen=$Canvas->textfit($slice,0);
  $Scroll_Y=0;

};

on_scroll();

# ---   *   ---   *   ---

sub cursor_up() {
  $Scroll_Y-=$Cursor->[1]==0;
  $Cursor->[1]-=$Cursor->[1]>0;

};

sub cursor_down() {
  $Scroll_Y+=$Cursor->[1]>=$ttysz[1]-2;
  $Cursor->[1]+=$Cursor->[1]<$ttysz[1];

};

sub cursor_left() {
  $Cursor->[0]-=$Cursor->[0]>0;

};

sub cursor_right() {
  $Cursor->[0]+=$Cursor->[0]<$ttysz[0];

};

# ---   *   ---   *   ---

Lycon::Ctl::register_events(

  -EXIT=>[0,0,sub {$Cache->{terminate}=1}],
  -MOV_A=>[

    # up
    \&cursor_up,\&cursor_up,0,

    # left
    \&cursor_left,\&cursor_left,0,

    # down
    \&cursor_down,\&cursor_down,0,

    # right
    \&cursor_right,\&cursor_right,0,

  ],

);

Lycon::Kbd::nit();
Lycon::Loop::set_quit(sub {

  return $Cache->{terminate};

});

Lycon::Clk::nit();
Lycon::Loop::set_logic(sub {

  on_scroll() if $Scroll_Y;

  Lycon::Loop::dwbuff($Screen.

    # status bar
    (sprintf

      "\e[%i;1H\e[2K\e[7m%lc ".
      "%i/%i %i %i\e[0m",

      $ttysz[1],
      Lycon::clkdr(),

      $Cursor->[1],$ttysz[1],$Y_Offset,$Scroll_Y

    ).

    # cursor
    (sprintf "\e[%i;%iH\e[?25h",

      $Cursor->[1],
      $Cursor->[0]

    )

  );

},[]);

Lycon::Kbd::swap_to();

Lycon::Dpy::beg();
Lycon::Loop::run();
Lycon::Dpy::end();

# ---   *   ---   *   ---
1; # ret
